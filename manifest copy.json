{
  "manifest_version": 3,
  "name": "Cookie Clearer",
  "version": "1.0",
  "description": "Clears cookies as they arise",
  "permissions": ["activeTab", "storage", "cookies"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Hide Cookie Banners"
  },
  "background": {
    "service_worker": "background.js"
  }
}
